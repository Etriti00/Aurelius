{
  "name": "aurelius-backend",
  "version": "1.0.0",
  "description": "Aurelius AI Personal Assistant Backend - Revolutionary AI-powered digital chief of staff",
  "author": "Aurelius AI",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:full",
    "build:compile": "nest build",
    "build:check": "npm run type-check && npm run lint:check && npm run test:unit",
    "build:full": "npm run build:pre && npm run build:compile && npm run build:post",
    "build:pre": "echo '🚀 Starting Aurelius Backend Build Process...' && npm run prisma:generate && npm run type-check && npm run lint:check",
    "build:post": "npm run test:unit && npm run health:check:post && echo '✅ Build completed successfully!'",
    "build:ci": "npm run prisma:generate && npm run type-check && npm run lint:check && npm run build:compile && npm run test:unit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:check": "npm run build:pre && npm run start:dev",
    "health:check": "node scripts/health-check.js",
    "health:check:post": "node scripts/health-check.js --post-build",
    "health:compile": "echo '🔍 Checking TypeScript compilation...' && npm run type-check",
    "health:dependencies": "echo '📦 Checking dependencies...' && npm audit --audit-level=high",
    "health:services": "echo '🏥 Checking service health...' && node scripts/validate-build.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "echo '🔍 Running ESLint checks...' && eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:errors": "eslint \"{src,apps,libs,test}/**/*.ts\" --quiet",
    "lint:fix": "echo '🔧 Fixing ESLint issues...' && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix-safe": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --fix-type layout",
    "type-check": "echo '🔍 Running TypeScript type checks...' && tsc --noEmit --pretty",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "echo '🧪 Running unit tests...' && jest --testPathIgnorePatterns=e2e --passWithNoTests",
    "test:integration": "echo '🔗 Running integration tests...' && jest --testPathPattern=spec.ts --passWithNoTests",
    "test:e2e": "echo '🌐 Running e2e tests...' && jest --config ./test/jest-e2e.json --passWithNoTests",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:generate": "echo '🔄 Generating Prisma client...' && prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:reset": "prisma migrate reset",
    "audit:fix": "npm audit fix",
    "audit:check": "npm audit --audit-level=moderate",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "validate": "npm run type-check && npm run lint:check && npm run test:unit && npm run health:check",
    "pre-commit": "npm run lint:errors && npm run type-check && npm run build:compile",
    "pre-push": "npm run build:full"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@aws-sdk/client-s3": "3.481.0",
    "@aws-sdk/lib-storage": "3.481.0",
    "@aws-sdk/s3-request-presigner": "3.481.0",
    "@bull-board/api": "5.10.2",
